<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/item_film"
        android:id="@+id/film_1"
        style="@style/CardFilmStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </include>

    <include layout="@layout/item_film"
        android:id="@+id/film_2"
        style="@style/CardFilmStyle"
        app:layout_constraintStart_toEndOf="@id/film_1"
        app:layout_constraintTop_toTopOf="parent">
    </include>

    <include layout="@layout/item_film"
        android:id="@+id/film_3"
        style="@style/CardFilmStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_1">
    </include>

    <include layout="@layout/item_film"
        android:id="@+id/film_4"
        style="@style/CardFilmStyle"
        app:layout_constraintStart_toEndOf="@id/film_3"
        app:layout_constraintTop_toBottomOf="@id/film_2">
    </include>

</androidx.constraintlayout.widget.ConstraintLayout>