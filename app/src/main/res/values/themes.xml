<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmsWithPagination" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- стиль текста вкарточке фильмов -->
    <style name="CardTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/item_padding</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

    <!-- стиль одной карточки фильма -->
    <style name="CardFilmStyle">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="layout_constraintHeight_default">percent</item>
        <item name="layout_constraintHeight_percent">0.5</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.5</item>
    </style>
</resources>